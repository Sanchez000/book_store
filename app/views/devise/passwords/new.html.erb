<!DOCTYPE html>
<html>
  <%= render 'parts/head' %>
  <body>
  <%= render 'parts/header' %>
  <main class="container general-main-wrap">
    <div class="text-center">
      <h3 class="general-login-title">Forgot your password?</h3>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "general-form" }) do |f| %>
      <div class="form-group mb-30">
        <%= f.label :email, class:"control-label input-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="text-center">
        <%= f.submit "Send me reset password instructions", class:"btn btn-default mb-20" %>
        <%= link_to "Back", :back, class:"btn btn-default mb-20" %>
      </div>
    <% end %>
  </main>
  <%= render 'parts/footer' %>
  </body>
</html>
